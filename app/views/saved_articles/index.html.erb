<h1 class="text-center">Saved articles</h1>
<div class="card-container">
  <div class="row">
    <% @saved_articles.each_slice(4) do |articles_batch| %>
      <div class="col-md-3">
        <% articles_batch.each do |article| %>
          <div class="card text-center">
          <h3 class="text-center text-bold text-orange">
           <h1><%= article.topic %> in <%= article.city %> </h1>
            <%= article.title %>
            <div class="text-center">
            <p class="text-center"><%= article.content %></p>
              <% favorited = current_user.favorited?(article) %>
              <%= link_to article_favorite_path(article) do %>
                <% if favorited %>
                  <i class="fas fa-heart"></i>
                <% else %>
                  <i class="far fa-heart"></i>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
